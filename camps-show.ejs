<%- include('partials/head') %> <%- include('partials/navbar') %>

<!-- Main Section -->
<main class="main">
  <!-- Section Map -->
  <section class="section-map">
    <div class="section-map__img-box">
      <img src="img/map-dummy.jpg" alt="dummy map" class="section-map__img" />
    </div>

    <!-- Camp Header Box -->
    <div class="camp__header">
      <div class="container camp__header-box">
        <!-- Camp Title Column -->
        <div class="camp__title-box">
          <h2 class="heading-2 camp__title">Forest Haven</h2>
          <p class="camp__info">
            <span class="camp__rating">5 &starf;</span> |
            <span>posted by John Doe</span>
          </p>
        </div>

        <!-- Camp Price Column -->
        <p class="camp__price"><span>$50</span> / Night</p>
      </div>
    </div>
    <div class="camp__action">
      <div class="container camp__action-box">
        <a href="#" class="btn btn--primary camp__btn-edit">Edit Camp</a>
        <form action="#" method="POST" class="form">
          <button class="btn btn--danger">
            <i class="fa-solid fa-trash camp__delete-icon"></i>
          </button>
        </form>
      </div>
    </div>

    <!-- Camp Body -->
    <div class="container camp__body">
      <div class="row-flex">
        <!-- Camp Image -->
        <div class="col-2-3">
          <div class="camp__img-box">
            <img src="img/camp-1.jpg" alt="camp 1" class="camp__img" />
          </div>
        </div>

        <div class="col-1-3">
          <!-- Camp Contact -->
          <div class="camp__contact">
            <h3 class="heading-3 camp__contact-title mb-24">Contact Info</h3>
            <p class="camp__address">
              <i class="fa-solid fa-location-dot"></i> 123 Pine Lane, Woodland
              Park, CO
            </p>
            <p class="camp__address">
              <i class="fa-solid fa-phone"></i>
              <a
                href="mailto:info@foresthaven.com"
                class="btn btn--link camp__link"
                >info&#64;foresthaven.com</a
              >
            </p>
            <p class="camp__address">
              <i class="fa-solid fa-globe"></i>
              <a
                href="http://www.foresthaven.com"
                class="btn btn--link camp__link"
                >http://www.foresthaven.com</a
              >
            </p>
          </div>
        </div>

        <div class="col-2-3">
          <!-- Camp Specification -->
          <div class="camp__specification-box my-24">
            <p class="camp__specification">
              <i class="fas fa-users"></i>
              30 People
            </p>
            <p class="camp__specification">
              <i class="fas fa-ruler-combined"></i>
              10 acres
            </p>
          </div>

          <!-- Camp Details -->
          <p class="camp__details">
            Nestled in the heart of the forest, Forest Haven offers a serene
            camping experience with access to hiking trails and wildlife
            viewing.
          </p>
        </div>

        <div class="col-1-3">
          <!-- Camp Amenities -->
          <div class="camp__amenities">
            <p class="camp__amenity">Electricity Hookups</p>
            <p class="camp__amenity">Water Hookups</p>
            <p class="camp__amenity">Sewer Hookups</p>
            <p class="camp__amenity">Picnic Tables</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section-reviews container">
    <div class="row-flex">
      <!-- Review Post -->
      <div class="col-1-3">
        <h2 class="heading-2 mb-24">Leave a Review</h2>

        <!-- Review Form -->
        <form action="#" method="get" class="form review-post">
          <div class="form__group">
            <textarea
              name="review"
              value=""
              id="review"
              class="form__textarea"
              placeholder="Type Your Review"
              required
            ></textarea>
          </div>
          <div class="form__group">
            <fieldset class="starability-grow">
              <legend>Rating:</legend>
              <input
                type="radio"
                id="no-rate"
                class="input-no-rate"
                name="rating"
                value="0"
                checked
                aria-label="No rating."
              />
              <input type="radio" id="first-rate1" name="rating" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="rating" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="rating" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="rating" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="rating" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>
          <button type="submit" class="btn btn--primary marathon__btn">
            Add Review
          </button>
        </form>
      </div>

      <!-- Review List -->
      <div class="col-2-3">
        <!-- Review 1 -->
        <div class="review">
          <div class="review__img-box">
            <img src="img/user-1.jpg" alt="author" class="review__img" />
          </div>
          <div class="review__content">
            <p class="review__author">John Doe</p>
            <p class="starability-result review__rating" data-rating="3">
              Rated: 3 stars
            </p>
            <p class="review__comment">
              Lorem ipsum dolor sit amet consectetur, adipisicing elit. Optio
              ullam non, vel assumenda esse officiis ex dolorum velit pariatur
              accusamus?
            </p>
          </div>
        </div>

        <!-- Review 2 -->
        <div class="review">
          <div class="review__img-box">
            <img src="img/user-2.jpg" alt="author" class="review__img" />
          </div>
          <div class="review__content">
            <p class="review__author">Jane Doe</p>
            <p class="starability-result review__rating" data-rating="5">
              Rated: 5 stars
            </p>
            <p class="review__comment">
              Lorem ipsum dolor sit amet consectetur, adipisicing elit. Optio
              ullam non.
            </p>
          </div>
        </div>

        <!-- Review 3 -->
        <div class="review">
          <div class="review__img-box">
            <img src="img/user-3.jpg" alt="author" class="review__img" />
          </div>
          <div class="review__content">
            <p class="review__author">Mike Tyson</p>
            <p class="starability-result review__rating" data-rating="1">
              Rated: 1 stars
            </p>
            <p class="review__comment">
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Explicabo
              repellendus quod inventore, provident facilis voluptatem eos
              dolore voluptas eligendi iure ipsa itaque perferendis adipisci
              tenetur accusamus quos cumque a maxime?
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include('partials/footer') %> <%- include('partials/end') %>
