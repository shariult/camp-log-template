<%- include('partials/head') %> <%- include('partials/navbar') %>

<!-- Main Section -->
<main class="main">
  <!-- Section Map -->
  <section class="section-map">
    <div class="section-map__img-box">
      <img src="img/map-dummy.jpg" alt="dummy map" class="section-map__img" />
    </div>
    <h1 class="heading-1 section-map__title">All Camps</h1>
  </section>

  <!-- Section Camps -->
  <section class="section-camps">
    <div class="container">
      <!-- Camp Cards -->
      <div class="cards">
        <!-- Card 1 -->
        <div class="cards-2 camp-card">
          <div class="camp-card__img-box">
            <img src="img/camp-1.jpg" alt="camp 1" class="camp-card__img" />
          </div>
          <div class="camp-card__header mb-12">
            <h3 class="heading-3 camp-card__title">Forest Haven</h3>
            <p class="camp-card__specification">30 persons | 10 acres</p>
          </div>
          <p class="camp-card__details mb-12">
            Nestled in the heart of the forest, Forest Haven offers a serene
            camping experience with access to hiking trails and wildlife
            viewing.
          </p>
          <div class="camp-card__footer">
            <p class="camp-card__price">
              <span>Price:</span> $50 <span>/ Night</span>
            </p>
            <a href="camps-show.ejs" class="btn btn--link camp-card__link"
              >View Details <i class="fa-solid fa-chevron-right"></i
            ></a>
          </div>
        </div>

        <!-- Card 2 -->
        <div class="cards-2 camp-card">
          <div class="camp-card__img-box">
            <img src="img/camp-2.jpg" alt="camp 2" class="camp-card__img" />
          </div>
          <div class="camp-card__header mb-12">
            <h3 class="heading-3 camp-card__title">Lakeside Retreat</h3>
            <p class="camp-card__specification">50 persons | 15 acres</p>
          </div>
          <p class="camp-card__details mb-12">
            Enjoy stunning lake views and water activities at Lakeside Retreat,
            perfect for family vacations and water sports enthusiasts.
          </p>
          <div class="camp-card__footer">
            <p class="camp-card__price">
              <span>Price:</span> $75 <span>/ Night</span>
            </p>
            <a href="camps-show.ejs" class="btn btn--link camp-card__link"
              >View Details <i class="fa-solid fa-chevron-right"></i
            ></a>
          </div>
        </div>

        <!-- Card 3 -->
        <div class="cards-2 camp-card">
          <div class="camp-card__img-box">
            <img src="img/camp-3.jpg" alt="camp 3" class="camp-card__img" />
          </div>
          <div class="camp-card__header mb-12">
            <h3 class="heading-3 camp-card__title">Mountain Escape</h3>
            <p class="camp-card__specification">40 persons | 20 acres</p>
          </div>
          <p class="camp-card__details mb-12">
            Experience the beauty of the mountains at Mountain Escape, offering
            cozy cabins and breathtaking hiking trails.
          </p>
          <div class="camp-card__footer">
            <p class="camp-card__price">
              <span>Price:</span> $60 <span>/ Night</span>
            </p>
            <a href="camps-show.ejs" class="btn btn--link camp-card__link"
              >View Details <i class="fa-solid fa-chevron-right"></i
            ></a>
          </div>
        </div>

        <!-- Card 4 -->
        <div class="cards-2 camp-card">
          <div class="camp-card__img-box">
            <img src="img/camp-4.jpg" alt="camp 4" class="camp-card__img" />
          </div>
          <div class="camp-card__header mb-12">
            <h3 class="heading-3 camp-card__title">Desert Oasis</h3>
            <p class="camp-card__specification">25 persons | 8 acres</p>
          </div>
          <p class="camp-card__details mb-12">
            Desert Oasis provides a unique camping experience in the desert,
            with access to sand dunes and beautiful sunsets.
          </p>
          <div class="camp-card__footer">
            <p class="camp-card__price">
              <span>Price:</span> $55 <span>/ Night</span>
            </p>
            <a href="camps-show.ejs" class="btn btn--link camp-card__link"
              >View Details <i class="fa-solid fa-chevron-right"></i
            ></a>
          </div>
        </div>
      </div>
      <div class="text--center">
        <a href="#" class="btn btn--primary btn--md">View More</a>
      </div>
    </div>
  </section>
</main>

<%- include('partials/footer') %> <%- include('partials/end') %>
